<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3"
    tools:context=".MyPageActivity">

    <TextView
        android:id="@+id/tv_mypage_title"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@color/white5"
        android:gravity="center"
        android:paddingStart="20dp"
        android:text="Setting"
        android:textColor="@color/black0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_mypage_mytext"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:background="@color/white5"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="내가 좋아한 글"
        android:textColor="@color/black3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_title" />

    <TextView
        android:id="@+id/tv_mypage_favorite"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="@color/white5"

        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="내가 좋아한 글"
        android:textColor="@color/black3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_mytext" />

    <TextView
        android:id="@+id/tv_mypage_signout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="@color/white5"

        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="내가 로그아웃"
        android:textColor="@color/black3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_favorite" />


    <include
        android:id="@+id/main_bottom_layout"
        layout="@layout/item_global_buttom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity">

    //ID
    <EditText
            android:hint="ID"
            android:id="@+id/etSignUpId"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:id="@+id/etSignUpPw"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etSignUpId"
            android:layout_marginStart="28dp"/>
    <EditText
            android:id="@+id/etSignUpPwchk"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="PASSWORD CHECK"
            android:inputType="textPassword"
            android:textSize="18sp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etSignUpPw"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/btSignUp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="가입하기"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/etSignUpPwchk"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.337"/>
    <TextView
            android:id="@+id/btGoBackToSignIn"
            android:text="가입취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.437"/>
    <Button
            android:text="중복체크"
            android:id="@+id/btDoubleCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/etSignUpId"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

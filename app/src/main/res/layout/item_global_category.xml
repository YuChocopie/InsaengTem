<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <LinearLayout
                android:id="@+id/category1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:weightSum="5"
                android:orientation="horizontal">


            <Button
                    android:background="@drawable/square_round10"
                    android:textColor="#000000"
                    android:padding="4dp"
                    android:gravity="center"
                    android:id="@+id/btnCategoryFoodDessert"
                    android:textSize="13sp"
                    android:lines="1"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#디저트"
    android:layout_weight="1"
                    android:onClick="radio_button_click"
                    android:layout_marginEnd="15dp"/>

            <Button
                    android:background="@drawable/square_round20"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btnCategoryFoodDrinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="1"
                    android:text="#주류"
                    android:onClick="radio_button_click"
                    android:layout_marginEnd="15dp"/>

            <Button
                    android:background="@drawable/square_round10"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btnCategoryFoodFoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="음식"
                    android:onClick="radio_button_click"
                    android:layout_marginEnd="15dp"/>

            <Button
                    android:background="@drawable/square_round20"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btnCategoryFoodSnacks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="#스낵"
                    android:layout_marginEnd="15dp"/>

            <Button
                    android:background="@drawable/square_round20"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btnCategoryFoodNecessarie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="#생필품"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/category2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="5">
            <Button
                    android:background="@drawable/square_round20"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btnCategoryLeisureDrama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="#드라마"
                    android:layout_marginEnd="15dp"/>
            <Button
                    android:background="@drawable/square_round20"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btnCategoryLeisureMovie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="#영화"
                    android:layout_marginEnd="15dp"/>
            <Button
                    android:background="@drawable/square_round20"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btnCategoryLeisureBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="#책"
                    android:layout_marginEnd="15dp"/>
            <Button
                    android:background="@drawable/square_round20"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btnCategoryLeisureMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="#음악"
                    android:layout_marginEnd="15dp"/>
            <Button
                    android:background="@drawable/square_round20"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btnCategoryEtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:text="#기타"/>
        </LinearLayout>
</LinearLayout>